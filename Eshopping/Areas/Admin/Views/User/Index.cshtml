@model IEnumerable<AppUserModel>
@{
    ViewData["title"] = "User Listed";
}
<h4>List User </h4>
@* thêm sửa xóa sp: *@
<a asp-action="Create" asp-controller="User">Add User</a>
<table class="table">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Name</th>
            <th scope="col">PasswordHash</th>

            <th scope="col">Phone</th>
            <th scope="col">Role</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                @* hiển thị sp từ csdl dưới dạng 1 bảng: sau này khi chèn thêm các sp vào csdl nó sẽ in ra thông  tin ở đây  *@
                <td>@user.Id</td>
                <td>@user.UserName</td>
                <td>@user.Email</td>

                @* Phương thức Html.Raw() sẽ render thô nội dung HTML thay vì escape các ký tự đặc biệt *@
                <td>@user.PasswordHash</td>

                <td>@user.PhoneNumber</td>
                <td></td>

                <td>
                    @* chỉnh sửa or xóa sp trong admin nó sẽ dựa vào id của sp đó, từ id đó trả  về thông tin sp *@
                    <a asp-action="Edit" class="btn btn-warning btn-sm" asp-controller="User" asp-route-Id="@user.Id">Edit</a>
                    <a asp-action="Delete" class="btn btn-danger btn-sm confirmDeletion" asp-controller="User" asp-route-Id="@user.Id">Delete</a>
                </td>
            </tr>

        }
    </tbody>
</table>